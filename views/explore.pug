extends common/layout

block layout-content
  main#main-explore

    .weather-map 
      .weatherinfo 
        .weather-content
          if weather 
            .weather-temp 
              img#weather-icon(src="https://openweathermap.org/img/wn/" + weather.weather[0].icon + "@2x.png")
            .weather-text
              p#weather-temp #{Math.round(weather.main.temp)} Â°C
              p#weather-city City: #{weather.name}
              p#weather-desc Description: #{weather.weather[0].description}
          else  
            p Weather data not available

    .pexels
      .pexelsinfo 
        h3 Explore Style
        .pexels-images
          if pexelsStyleData 
            each photo in pexelsStyleData.photos 
              img.pexelimg(src=photo.src.medium)
          else  
            p Style data not available.

        h3 Explore Accessories
        .pexels-images
          if pexelsAccessoryData 
            each photo in pexelsAccessoryData.photos 
              img.pexelimg(src=photo.src.medium)
          else  
            p Accessories data not available.
